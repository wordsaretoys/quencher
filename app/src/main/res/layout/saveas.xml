<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <TextView
        android:id="@+id/lbl0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/labelName"/>
    
    <EditText
        android:id="@+id/name"
        android:inputType="textNoSuggestions"
        android:textSize="24sp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@id/lbl0"
        android:layout_alignBaseline="@id/lbl0"
        android:layout_alignLeft="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lbl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl0"
        android:textSize="24sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/labelDesc"/>
    
    <EditText
        android:id="@+id/desc"
        android:inputType="textNoSuggestions"
        android:textSize="24sp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/lbl1"
        android:layout_below="@id/name"
        android:layout_alignBaseline="@id/lbl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
</RelativeLayout>
